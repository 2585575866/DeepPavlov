{
  "dataset_reader": {
    "class_name": "coreference_reader",
    "data_path": "~/.deeppavlov/downloads/coreference_dataset/rucoref_29.10.2015",
    "mode": "jsonl"
  },
  "dataset_iterator": {
    "class_name": "coreference_iterator",
    "dtype": "jsonl",
    "seed": 42,
    "field_to_split": "train",
    "split_fields": [
      "train",
      "valid",
      "test"
    ],
    "split_proportions": [
      0.8,
      0.1,
      0.1
    ]
  },
  "chainer": {
    "in": ["x"],
    "pipe": [
      {
        "in": ["x"],
        "out": ["sentences", "speakers", "doc_key", "clusters"],
        "class_name": "conll2modelformat"
      },
      {
        "in": ["sentences"],
        "class_name": "char_splitter",
        "out": ["x_char"]
      },
      {
        "in": ["x_char"],
        "id": "char_vocab",
        "class_name": "simple_vocab",
        "pad_with_zeros": true,
        "fit_on": ["x_char"],
        "save_path": "{MODELS_PATH}/char.dict",
        "load_path": "{MODELS_PATH}/char.dict"
      },
      {
        "id": "embedder",
        "class_name": "fasttext",
        "load_path": "{DOWNLOADS_PATH}/embeddings/ft_native_300_ru_wiki_lenta_nltk_wordpunct_tokenize.bin"
      },
      {
        "in": ["sentences", "speakers", "doc_key"],
        "in_y": ["clusters"],
        "out": ["predicted_clusters", "mention_to_predicted"],
        "main": true,
        "class_name": "coref_model_on_gold",
        "save_path": "{MODELS_PATH}/checkpoints/model_on_gold/best_model.ckpt",
        "load_path": "{MODELS_PATH}/checkpoints/model_on_gold/best_model.ckpt",
        "char_vocab": "#char_vocab",
        "embedder": "#embedder",
        "embedding_size": 300
      },
      {
        "in": ["x", "predicted_clusters"],
        "out": ["pred_conll"],
        "class_name": "coref_pred2conll_doc"
      }
    ],
    "out": ["x", "pred_conll"]
  },
  "train": {
    "epochs": 200,
    "batch_size": 1,
    "metrics": [
      {
        "name": "coref_f1",
        "inputs": ["x", "pred_conll"]
      }
    ],
    "validation_patience": 5,
    "val_every_n_epochs": 1,
    "log_every_n_epochs": 1,
    "show_examples": false,
    "validate_best": true,
    "test_best": true
  },
  "metadata": {
    "variables": {
      "ROOT_PATH": "~/.deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/coreference"
    },
    "requirements": [
      "{DEEPPAVLOV_PATH}/requirements/tf-gpu.txt",
      "{DEEPPAVLOV_PATH}/requirements/fasttext.txt",
      "{DEEPPAVLOV_PATH}/requirements/elmo.txt"
    ],
    "download": [
      {
        "url": "http://files.deeppavlov.ai/datasets/coreference_resolution/rucoref_29.10.2015.zip",
        "subdir": "{DOWNLOADS_PATH}/coreference_dataset/"
      }
    ]
  }
}
