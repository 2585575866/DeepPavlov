{
  "dataset_reader": {
    "class_name": "coreference_reader",
    "data_path": "{DOWNLOADS_PATH}/coreference_dataset/rucoref_conll",
    "mode": "jsonl"
  },
  "dataset_iterator": {
    "class_name": "coreference_iterator",
    "dtype": "jsonl",
    "seed": 42,
    "field_to_split": "train",
    "split_fields": [
      "train",
      "valid",
      "test"
    ],
    "split_proportions": [
      0.8,
      0.1,
      0.1
    ]
  },
  "chainer": {
    "in": ["sentences", "speakers", "doc_key"],
    "in_y": ["clusters"],
    "pipe": [
      {
        "in": ["sentences"],
        "class_name": "char_splitter",
        "out": ["x_char"]
      },
      {
        "in": ["x_char"],
        "id": "char_vocab",
        "class_name": "simple_vocab",
        "pad_with_zeros": true,
        "fit_on": ["x_char"],
        "save_path": "{MODELS_PATH}/ner_conll2003/char.dict",
        "load_path": "{MODELS_PATH}/ner_conll2003/char.dict",
        "out": ["x_char_ind"]
      }
    ],
    "out": ["x_char_ind"]
  },
  "train": {
    "batch_size": 1
  },
  "metadata": {
    "variables": {
      "ROOT_PATH": "~/.deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/coreference"
    },
    "requirements": [
      "{DEEPPAVLOV_PATH}/requirements/tf-gpu.txt",
      "{DEEPPAVLOV_PATH}/requirements/fasttext.txt",
      "{DEEPPAVLOV_PATH}/requirements/elmo.txt"
    ]
  }
}
