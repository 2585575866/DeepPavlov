{
  "dataset_reader": {
    "class_name": "conll2003_reader",
    "data_path": "{DOWNLOADS_PATH}/total_rus/",
    "dataset_name": "collection_rus",
    "provide_pos": false
  },
  "dataset_iterator": {
    "class_name": "data_learning_iterator"
  },
  "chainer": {
    "in": ["x"],
    "in_y": ["y"],
    "pipe": [
      {
        "class_name": "bert_ner_preprocessor",
        "vocab_file": "{BERT_PATH}/vocab.txt",
        "do_lower_case": false,
        "max_seq_length": 213,
        "max_subword_length": 15,
        "in": ["x", "y"],
        "out": ["x_subword_tokens", "x_subword_tok_ids", "subword_mask", "y_subword"]
      },
      {
        "id": "tag_vocab",
        "class_name": "simple_vocab",
        "unk_token": ["O"],
        "pad_with_zeros": true,
        "fit_on": ["y"],
        "save_path": "{NER_PATH}/tag.dict",
        "load_path": "{NER_PATH}/tag.dict",
        "in": ["y_subword"],
        "out": ["y_subword_ind"]
      },
      {
        "class_name": "bert_ner",
        "n_tags": "#tag_vocab.len",
        "return_probas": false,
        "bert_config_file": "{BERT_PATH}/bert_config.json",
        "pretrained_bert": "{BERT_PATH}/bert_model.ckpt",
        "save_path": "{NER_PATH}/model",
        "load_path": "{NER_PATH}/model",
        "keep_prob": 0.3,
        "learning_rate": 2e-05,
        "learning_rate_drop_patience": 10,
        "learning_rate_drop_div": 2,
        "in": ["x_subword_tok_ids", "subword_mask"],
        "in_y": ["y_subword_ind"],
        "out": ["y_subword_pred_ind"]
      },
      {
        "ref": "tag_vocab",
        "in": ["y_subword_pred_ind"],
        "out": ["y_subword_pred"]
      },
      {
        "class_name": "deeppavlov.models.bert.bert_ner:MaskCutter",
        "in": ["y_subword_pred", "subword_mask"],
        "out": ["y_pred_cut"]
      },
      {
        "class_name": "deeppavlov.models.bert.bert_ner:MaskCutter",
        "in": ["y_subword", "subword_mask"],
        "out": ["y_cut"]
      },
      {
        "class_name": "deeppavlov.models.bert.bert_ner:MaskCutter",
        "in": ["x_subword_tokens", "subword_mask"],
        "out": ["x_tokens_cut"]
      }
    ],

    "out": ["x_tokens_cut", "y_pred_cut"]
  },
  "train": {
    "epochs": 100,
    "batch_size": 8,

    "metrics": [
      {
        "name": "ner_f1",
        "inputs": ["y_cut", "y_pred_cut"]
      }
    ],
    "validation_patience": 40,
    "val_every_n_batches": 10,

    "log_every_n_batches": 10,
    "tensorboard_log_dir": "{NER_PATH}/logs",

    "show_examples": false,
    "evaluation_targets": ["valid", "test"],
    "class_name": "nn_trainer"
  },
  "metadata": {
    "variables": {
      "ROOT_PATH": "~/.deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/models",
      "BERT_PATH": "{DOWNLOADS_PATH}/bert_models/rubert_cased_L-12_H-768_A-12_v1",
      "NER_PATH": "{MODELS_PATH}/ner_rus_bert_v1"
    },
    "requirements": [
      "{DEEPPAVLOV_PATH}/requirements/tf.txt",
      "{DEEPPAVLOV_PATH}/requirements/bert_dp.txt"
    ],
    "labels": {
      "telegram_utils": "NERCoNLL2003Model",
      "server_utils": "NER"
    },
    "download": [
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/bert/rubert_cased_L-12_H-768_A-12_v1.tar.gz",
        "subdir": "{DOWNLOADS_PATH}/bert_models"
      }
    ]
  }
}
