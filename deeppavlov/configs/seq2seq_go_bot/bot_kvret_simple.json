{
  "dataset_reader": {
    "class_name": "kvret_reader",
    "data_path": "{DOWNLOADS_PATH}/kvret"
  },
  "dataset_iterator": {
    "class_name": "skill_dialog_iterator",
    "y_names": ["text", "domain"],
    "shuffle": false
  },
  "chainer": {
    "in": ["x_text", "history_list", "state"],
    "in_y": ["y_text", "y_domain"],
    "out": ["prediction_text", "confidence", "state"],
    "pipe": [
      {
        "id": "stream_spacy",
        "class_name": "stream_spacy_tokenizer",
        "lowercase": true,
        "alphas_only": false,
        "in": ["x_text"],
        "out": ["x_tokens"]
      },
      {
        "ref": "stream_spacy",
        "in": ["y_text"],
        "out": ["y_tokens"]
      },
      {
        "class_name": "deeppavlov.models.seq2seq_go_bot.wrapper:PerItemWrapper",
        "component": "#stream_spacy",
        "in": ["history_list"],
        "out": ["history_tok_list"]
      },
      {
        "id": "src_token_vocab",
        "fit_on": ["x_tokens", "y_tokens"],
        "class_name": "simple_vocab",
        "min_freq": 2,
        "default_token": "<UNK>",
        "special_tokens": ["<UNK>", "<SOS>"],
        "save_path": "{BOT_PATH}/kvret_src_tokens.dict",
        "load_path": "{BOT_PATH}/kvret_src_tokens.dict"
      },
      {
        "id": "tgt_token_vocab",
        "fit_on": ["y_tokens"],
        "class_name": "simple_vocab",
        "default_token": "<UNK>",
        "special_tokens": ["<UNK>", "<SOS>", "<EOS>"],
        "save_path": "{BOT_PATH}/kvret_tgt_tokens.dict",
        "load_path": "{BOT_PATH}/kvret_tgt_tokens.dict"
      },
      {
        "id": "token_embedder",
        "class_name": "glove",
        "load_path": "{DOWNLOADS_PATH}/embeddings/glove.6B.100d.txt"
      },
      {
        "in": ["x_tokens", "history_tok_list"],
        "in_y": ["y_tokens"],
        "out": ["prediction_tokens", "confidence"],
        "main": true,
        "class_name": "seq2seq_go_bot",
        "load_path": "{BOT_PATH}/model",
        "save_path": "{BOT_PATH}/model",
        "start_of_sequence_token": "<SOS>",
        "end_of_sequence_token": "<EOS>",
        "embedder": "#token_embedder",
        "network_parameters": {
          "learning_rate": 3e-4,
          "learning_rate_drop_patience": 6,
          "learning_rate_drop_div": 3.0,
          "dropout_rate": 0.3,
          "state_dropout_rate": 0.05,
          "beam_width": 1,
          "target_start_of_sequence_index": "#tgt_token_vocab.__getitem__('<SOS>')",
          "target_end_of_sequence_index": "#tgt_token_vocab.__getitem__('<EOS>')",
          "source_vocab_size": "#src_token_vocab.__len__()",
          "target_vocab_size": "#tgt_token_vocab.__len__()",
          "hidden_size": 256
        },
        "debug": true,
        "debug": false,
        "source_vocab": "#src_token_vocab",
        "target_vocab": "#tgt_token_vocab",
        "knowledge_base_keys": [] 
      },
      {
        "ref": "stream_spacy",
        "in": ["prediction_tokens"],
        "out": ["prediction_text"]
      }
    ]
  },
  "train": {
    "epochs": 200,
    "batch_size": 16,

    "metrics": [
      {
        "name": "google_bleu",
        "inputs": ["y_text", "prediction_text"]
      },
      {
        "name": "bleu",
        "inputs": ["y_text", "prediction_text"]
      },
      {
        "name": "accuracy",
        "inputs": ["y_text", "prediction_text"]
      }
    ],
    "validation_patience": 30,
    "val_every_n_epochs": 1,
    "tensorboard_log_dir": "{BOT_PATH}/logs",

    "log_every_n_batches": -1,
    "log_every_n_epochs": 1,
    "validate_best": true,
    "show_examples": false
  },
  "metadata": {
    "variables": {
      "ROOT_PATH": "~/.deeppavlov",
      "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
      "MODELS_PATH": "{ROOT_PATH}/models",
      "BOT_PATH": "{MODELS_PATH}/seq2seq_go_bot_simple_glove2"
    },
    "requirements": [
      "{DEEPPAVLOV_PATH}/requirements/tf.txt",
      "{DEEPPAVLOV_PATH}/requirements/spacy.txt",
      "{DEEPPAVLOV_PATH}/requirements/en_core_web_sm.txt",
      "{DEEPPAVLOV_PATH}/requirements/fasttext.txt"
    ],
    "labels": {
      "telegram_utils": "Seq2SeqGoalOrientedBot",
      "server_utils": "GoalOrientedBot"
    },
    "download": [
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/vocabs.tar.gz",
        "subdir": "{MODELS_PATH}"
      },
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/seq2seq_go_bot_v2.tar.gz",
        "subdir": "{MODELS_PATH}"
      },
      {
        "url": "http://files.deeppavlov.ai/deeppavlov_data/embeddings/glove.6B.100d.txt",
        "subdir": "{DOWNLOADS_PATH}/embeddings"
      }
    ]
  }
}
